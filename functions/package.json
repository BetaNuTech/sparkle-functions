{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "test": "npm run test-unit",
    "test-unit": "NODE_ENV=test LOG_LEVEL=crit ./node_modules/.bin/mocha './{,!(node_modules)/**}/*.spec.js'",
    "dev": "./node_modules/.bin/nodemon -i node_modules -e js,json --exec 'npm test --silent'",
    "coverage": "./node_modules/.bin/nyc npm test --silent"
  },
  "dependencies": {
    "co": "^4.6.0",
    "firebase-admin": "^6.0.0",
    "firebase-functions": "^2.0.5",
    "moment": "^2.22.2",
    "winston": "^3.1.0"
  },
  "private": true,
  "devDependencies": {
    "chai": "^4.2.0",
    "firebase-functions-test": "^0.1.6",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0",
    "sinon": "^7.2.2"
  }
}
